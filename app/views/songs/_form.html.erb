<div>
<%= form_for(@song) do |f| %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

    <div class="field">
    <%= f.label :length %><br>
    <%= f.text_field :length %>
  </div>

  <div class="field">
    <%= f.label :genre %><br>
    <%= f.text_field :genre %>
  </div>

  <div class="field">
    <label for="song_artist_name">Artist Name</label><br>
    <input type="text" name="song[artist_name]" id="song_artist_name">
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>